{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "quotes": [2, "single"],
        "no-console": [0],
        "curly": [2, "all"],
        "eqeqeq": [2],
        "no-extra-bind": [2],
        "no-lone-blocks": [2],
        "no-loop-func": [2],
        "no-native-reassign": [2],
        "no-new-wrappers": [2],
        "no-useless-call": [2],
        "radix": [2],
        "wrap-iife": [2],
        "callback-return": [2],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": [2],
        "linebreak-style": [2, "unix"],
        "no-trailing-spaces": [2],
        "array-bracket-spacing": [2, "never"],
        "block-spacing": [2],
        "comma-spacing": [2],
        "computed-property-spacing": [2],
        "eol-last": [2],
        "indent": [2, 2],
        "jsx-quotes": [2, "prefer-double"],
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "new-cap": [2],
        "no-spaced-func": [2],
        "object-curly-spacing": [2, "always"],
        "semi": [2, "always"],
        "strict": [2, "safe"]
    }
}
